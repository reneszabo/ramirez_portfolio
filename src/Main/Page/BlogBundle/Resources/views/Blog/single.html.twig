{% if read_more is not defined %}
  {% set read_more = false %}
{% endif %}
<article class="post">
  <header>
    <h2 class="bolder">
      <a href="#" rel="bookmark">
        {{ post.title }}
      </a>
    </h2>
    <div class="entry-meta">
      <span><i class="fa fa-calendar"> </i> {{ post.createdAt | date('M d, Y') }}</span>
      <span><i class="fa fa-user"></i> <a class="author-link" href="#" rel="author">{{ post.author.realname }}</a></span>
      <span class="categories-links"> <i class="fa fa-tags"></i> <a href="#" rel="category tag">Life at Inchoo</a></span>
      <span><i class="fa fa-comment"></i> <a href="#" title="Comment on The Core"><span class="leave-reply">3 Comments</span></a></span>
    </div>
  </header>
  <div class="entry-thumbnail">
    <a href="#" class="more-link">
      <img src="http://lorempixel.com/744/244/business?id={{ random() }} " class="img-responsive img-rounded" alt="">				
    </a>
  </div>
  <div class="entry-content">
    {{ post.content(read_more)|raw }}
  </div>
  {% if read_more == true %}
    <footer class="clearfix">
      <a href="{{ path("blog_homepage_post",{slug: post.slug}) }}" class="btn btn-info pull-right">Read more</a>
    </footer>
  {% endif %}
</article>