        console.log(direction);
        if (direction === 'down') {
          $('#header-navbar').addClass('navbar-white');
          $('#header-navbar').removeClass('navbar-trasparent');
        } else {
          $('#header-navbar').addClass('navbar-trasparent');
          $('#header-navbar').removeClass('navbar-white');
        }
      }, {offset: 50})


      $('.modal').on('click', function () {
        $('.modal .box').removeClass('box-animation');
        setTimeout(function () {
          $('.modal').fadeOut('fast');
        }, 200);
      });

      $('#symbiosis img').on('click', function () {
        console.log('show modal');
        $('.modal').show();
        $('.modal img').attr('src', $(this).attr('data-hd'));
        setTimeout(function () {
          $('.modal .box').addClass('box-animation');
        }, 100);
      });

    });
  </script>

</script>
