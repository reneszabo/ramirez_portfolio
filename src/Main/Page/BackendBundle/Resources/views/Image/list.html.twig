<div class="pagerfanta text-right">{{ pagerfanta(pager, 'twitter_bootstrap3') }}</div>
<div id="image-gallery" class="row">
  {% for image in pager.currentPageResults %}
    <div class="col-xs-4">
      <div class="thumbnail">
        <img src="{{ image.path }}" alt="{{ image.alt }}" class="img-responsive" />
        <div class="caption">
          <h3>{{ image.alt }}</h3>
          <div class="clearfix">
            <div class="pull-right">
              <a href="#" class="btn btn-primary use-image" data-id="{{ image.id }}" role="button">
                <i class="glyphicon glyphicon-cloud"></i>
              </a> 
              <a href="#" class="btn btn-default" role="button">
                <i class="glyphicon glyphicon-pencil"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
<div class="pagerfanta text-right">{{ pagerfanta(pager, 'twitter_bootstrap3') }}</div>